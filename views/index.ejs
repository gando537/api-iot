                    </thead>
                    <tbody>
                        <!-- Data rows will be dynamically inserted here -->

                    </tbody>
                </table>
            </section>

            <!-- Pools List Section -->
            <section id="pools-list" class="mb-5">
                <div class="row">
                    <div class="col-12 d-flex flex-row align-items-center mb-3">
                        <i class="bi bi-water me-2"></i>
                        <h3 class="mb-0">Pools list</h3>
